<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="cash_box_inout_form">
            <field name="name">cash.box.inout.form</field>
            <field name="model">cashbox.in.out</field>
            <field name="arch" type="xml">
                <form string="Take Money In/Out">
                    <separator string="Describe why you put/take money from the cash register:"/>
                    <group>
                        <field name="reason" class="oe_inline"/>
                        <field name="amount" class="oe_inline"/>
                    </group>
                    <footer>
                        <button name="action_take_inout" string="Take Money In/Out" type="object" class="btn-primary"/>
                        <button class="btn-secondary" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>