            <field name="name">ICD codes</field>
            <field name="model">icd.codes</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1><field name="name" placeholder="Name/Description" required="1"/></h1>
                        <group col="4">
                            <field name="code" required="1"/>
                            <field name="comment"/>
                            <field name="icd_codes_category_id"/>
                            <field name="common"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

