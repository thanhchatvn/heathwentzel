        <record id="icd_codes_tree_view" model="ir.ui.view">
        <field name="name">ICD codes</field>
        <field name="model">icd.codes</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="comment"/>
                <field name="icd_codes_category_id"/>
                <field name="common"/>
            </tree>
        </field>
        </record>

