<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_project_task_form_view" model="ir.ui.view">
            <field name="name">Products</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]/button" position="before">
                    <button name="action_view_purchase_order" type="object" class="oe_stat_button"
                            icon="fa-shopping-cart">
                        <field string="Purchase" name="purchase_order_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="%(TOMS.custom_job_exam_report)d" string="Print" type="action"
                            class="btn-primary o_sale_print"/>
                </xpath>
                <xpath expr="//form//group" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form//sheet//div[1]" position="inside">
                    <button class="oe_stat_button"
                            attrs="{'invisible':[('examination_id','=',False)]}"
                            name="open_job_exams" icon="fa-ticket" type="object">
                        <span widget="statinfo">Exam</span>
                    </button>
                </xpath>
                <xpath expr="//form//header" position="inside">
                    <button name="send_sms" string="Send Sms"
                            type="object" class="btn btn-primary"/>
                </xpath>
                <xpath expr="//form//sheet//notebook//page[2]//group"
                       position="before">
                    <group col="4">
                        <field name="project_id" domain="[('active', '=', True)]"/>
                        <field name="tag_ids" widget="many2many_tags"
                               options="{'color_field': 'color', 'no_create_edit': True}"/>
                    </group>
                </xpath>
                <xpath expr="//form//sheet//div[2]" position="after">
                    <group>
                        <group>
                            <field name="job_number" readonly="1"/>
                            <field name="create_date" string="Order Date" widget="date"/>
                            <field name="exam_id"/>
                            <field name="date_deadline"/>
                            <field name="user_id" class="o_task_user_field"
                                   options="{&quot;no_open&quot;: True}"/>
                            <field name="job_type" required="1"/>
                            <field name="physical_location"/>
                            <field name="tray"/>
                            <field name="legend_blocked"
                                   invisible="1"/>
                            <field name="legend_normal" invisible="1"/>
                            <field name="legend_done" invisible="1"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="mobile"/>
                            <field name="phone"/>
                            <field name="work_phone"/>
                            <field name="email"/>
                            <field name="repurchase_job"/>
                            <field name="examination_id"
                                   invisible="1"/>
                            <field name="is_contact_lense_job"
                                   invisible="1"/>

                        </group>
                    </group>
                    <span style="font-size: 20px;color:#666666"
                          attrs="{'invisible':[('is_contact_lense_job','=',True)]}">Final RX (Spectacles)
                    </span>
                    <table class="table table-striped" attrs="{'invisible':[('is_contact_lense_job','=',True)]}">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Sph</th>
                                <th>Cyl</th>
                                <th>Axis</th>
                                <th>Prism</th>
                                <th>Add</th>
                                <th>Va</th>
                                <th>Sph</th>
                                <th>Cyl</th>
                                <th>Axis</th>
                                <th>Prism</th>
                                <th>Add</th>
                                <th>Va</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <field name="final_rx_name"
                                           readonly="1"/>
                                </td>
                                <td>
                                    <field name="od_syh" readonly="1"/>
                                </td>
                                <td>
                                    <field name="od_cyl" readonly="1"/>
                                </td>
                                <td>
                                    <field name="od_axis"
                                           readonly="1"/>
                                </td>
                                <td>
                                    <field name="od_prism"
                                           readonly="1"/>
                                </td>
                                <td>
                                    <field name="od_add" readonly="1"/>
                                </td>
                                <td>
                                    <field name="od_va" readonly="1"/>
                                </td>
                                <td>
                                    <field name="os_syh" readonly="1"/>
                                </td>
                                <td>
                                    <field name="os_cyl" readonly="1"/>
                                </td>
                                <td>
                                    <field name="os_axis"
                                           readonly="1"/>
                                </td>
                                <td>
                                    <field name="os_prism"
                                           readonly="1"/>
                                </td>
                                <td>
                                    <field name="os_add" readonly="1"/>
                                </td>
                                <td>
                                    <field name="os_va" readonly="1"/>
                                </td>
                                <td>
                                    <button name="project_fitting_details"
                                            string="Fitting Details" type="object"
                                            class='btn btn-primary'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                    <span style="font-size: 20px;color:#666666"
                          attrs="{'invisible':[('is_contact_lense_job','=',False)]}">Final RX (Contact Lenses)
                    </span>
                    <table class="table table-striped" attrs="{'invisible':[('is_contact_lense_job','=',False)]}">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Sph</th>
                                <th>Cyl</th>
                                <th>Axis</th>
                                <th>Add</th>
                                <th>Va</th>
                                <th>Sph</th>
                                <th>Cyl</th>
                                <th>Axis</th>
                                <th>Add</th>
                                <th>Va</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <field name="contact_final_rx_name"
                                           readonly="1"/>
                                </td>
                                <td>
                                    <field name="contact_od_syh" readonly="1"/>
                                </td>
                                <td>
                                    <field name="contact_od_cyl" readonly="1"/>
                                </td>
                                <td>
                                    <field name="contact_od_axis"
                                           readonly="1"/>
                                </td>
                                <td>
                                    <field name="contact_od_add" readonly="1"/>
                                </td>
                                <td>
                                    <field name="contact_od_va" readonly="1"/>
                                </td>
                                <td>
                                    <field name="contact_os_syh" readonly="1"/>
                                </td>
                                <td>
                                    <field name="contact_os_cyl" readonly="1"/>
                                </td>
                                <td>
                                    <field name="contact_os_axis"
                                           readonly="1"/>
                                </td>
                                <td>
                                    <field name="contact_os_add" readonly="1"/>
                                </td>
                                <td>
                                    <field name="contact_os_va" readonly="1"/>
                                </td>
                                <td>
                                    <button name="project_contact_fitting_details"
                                            string="Fitting Details" type="object"
                                            class='btn btn-primary'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <group>
                        <field name="clinical_final_rx_id"
                               invisible="1"/>
                        <field name="contact_clinical_final_rx_id"
                               invisible="1"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="inherit_project_task_type_form" model="ir.ui.view">
            <field name="name">Stages</field>
            <field name="model">project.task.type</field>
            <field name="inherit_id" ref="project.task_type_edit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='mail_template_id']"
                       position="after">
                    <field name="sms_template_id"/>
                    <field name="active"/>
                </xpath>
            </field>
        </record>
        <!-- Inherit Form View to Modify it -->
        <record id="Inerit_project_task_type_kanban" model="ir.ui.view">
            <field name="name">Kanban_view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <xpath expr='//kanban/templates/t/div/div/div/div/strong' position="after">
                    <div>
                        <small>
                            <field name="partner_id"/>
                            <br/>
                            <field name="exam_id"/>
                            <br/>zz
                            <field name="job_number"/>
                        </small>
                    </div>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="inherit_view_task_search_form" model="ir.ui.view">
            <field name="name">inherit_view_task_search_form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="job_number"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
